<?xml version="1.0" encoding="utf-8" ?>
<widget id="mxinput.widget.mxinput" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
	<name>mxinput</name>
	<description>mxinput</description>
	<icon></icon>
	<properties>
		<property key="inputValue" type="attribute">
			<caption>Attribute</caption>
			<category>Settings</category>
			<description>The input attribute of the widget.</description>
			<attributeTypes>
				<attributeType name="String" />
			</attributeTypes>
		</property>
		<property key="mfToExecute" type="microflow" required="true" defaultValue="">
			<caption>Microflow</caption>
			<category>Settings</category>
			<description>The microflow to execute upon hitting the enter key</description>
			<returnType type="Boolean" />
		</property>
		<property key="async" type="boolean" defaultValue="false">
			<caption>Asynchronous</caption>
			<category>Settings</category>	
			<description>Call microflow asynchronously</description>	
		</property>
		 <property key="progressBar" type="boolean" defaultValue="false">
			 <caption>Show progress</caption>
			 <category>Settings</category>	
			 <description>Show a progress bar</description>	
		</property>
		 <property key="progressMsg" type="string" defaultValue="Loading">
			<caption>Progress message</caption>
			 <category>Settings</category>	
			 <description>Progress bar message (only visible if 'Show progress' is true)</description>	
		</property>
		<property key="placeholder" type="string" required="false" defaultValue="">
			<caption>Placeholder text</caption>
			<category>Settings</category>
			<description>Placeholder for when the input field is empty</description>
		</property>
	</properties>
</widget>
